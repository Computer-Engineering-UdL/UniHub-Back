########################################
# API & GENERAL SETTINGS
########################################
API_VERSION=/api/v1
ENVIRONMENT=dev
SECRET_KEY="secret"
ALGORITHM="HS256"
DEFAULT_PASSWORD=supersecretpass
PROD_URL=https://computer-engineering-udl.github.io/UniHub-Front
TEMPORARY_DB=False


########################################
# DATABASE (PostgreSQL)
########################################
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=unihub
POSTGRES_PASSWORD="test"
POSTGRES_DB=unihub


########################################
# CACHE / MESSAGE BROKER (Valkey / Redis)
########################################
VALKEY_HOST=localhost
VALKEY_PORT_NUMBER=6379
VALKEY_PASSWORD=supersecretpass
VALKEY_TTL=3600
USE_FAKE_VALKEY=False


########################################
# OAUTH PROVIDERS
########################################

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret


########################################
# FILE UPLOAD SETTINGS
########################################
# Max: 10 MB
MAX_FILE_SIZE=10485760
# Allowed MIME types as JSON array
ALLOWED_FILE_TYPES='["image/jpeg", "image/png", "image/gif", "image/webp"]'


########################################
# MINIO STORAGE
########################################
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=files
MINIO_SECURE=False


########################################
# EMAIL VERIFICATION
########################################
VERIFICATION_TOKEN_EXPIRE_HOURS=24
VERIFICATION_SEND_COOLDOWN_SECONDS=60


########################################
# PASSWORD RESET
########################################
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1
PASSWORD_RESET_RATE_LIMIT_REQUESTS=3
PASSWORD_RESET_RATE_LIMIT_WINDOW=3600


########################################
# PASSWORD POLICY
########################################
PASSWORD_HISTORY_COUNT=5
PASSWORD_MIN_LENGTH=8


########################################
# SMTP CONFIGURATION
########################################
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@uniroom.com

########################################
# IMAGE PROCESSING
########################################
IMAGE_COMPRESSION_ENABLED=True
IMAGE_COMPRESSION_QUALITY=80
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_CONVERT_TO_WEBP=True
